<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Select Teammate to Evaluate</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin: 0;
            height: 100vh;
            background-image: linear-gradient(to top, #708090, #778d95, #859a99, #97a59e, #aaafa7, #a7aca4, #a5aaa2, #a2a79f, #8a9690, #738585, #61747a, #55616e);            color: #E0E0E0; /* Light grey text for readability */
        }

        .container {
            text-align: center;
            background-color: rgba(77, 77, 77, 0.95);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: rgba(77, 77, 77, 0.95);
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            color: #E0E0E0;
        }

        th {
            background-color: #4F8A8B;
        }

        tr:hover {
            background-color: #575757;
        }

        .btn {
            padding: 10px 20px;
            margin: 10px;
            border: none;
            background-color: #4F8A8B;
            color: white;
            cursor: pointer;
            font-size: 16px;
            border-radius: 5px;
            text-decoration: none;
        }

        .btn:hover {
            opacity: 0.9;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome, <%= user.name %>!</h1>
        <p>Your email: <%= user.email %></p>
        <a href="/logout" class="btn">Logout</a>
    </div>

    <h2>Your Teammates:</h2>

    <table>
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            <% teammates.forEach(function(teammate) { %>
                <% if (teammate.email !== user.email) { %>
                    <tr>
                        <td>
                            <%= teammate.name %>
                            <a href="/evaluate?evaluateeEmail=<%= teammate.email %>" class="btn">Evaluate</a>
                        </td>
                    </tr>
                <% } %>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
